@model Blog.Models.Post

<form asp-action="CreatePost" method="post" class="">
    
    <!-- Title -->
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="Title" class="form-control"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <!-- Body -->
    <div class="form-group">
        <label asp-for="Body" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="Body" class="form-control"/>
            <span asp-validation-for="Body" class="text-danger"></span>

        </div>
    </div>

    <!-- Submit -->
    <div class="form-group">
        <div class="col-md-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Post "/>
        </div>
    </div>

</form> 